@model EmployeeDetails.Web.Models.Entities.Employee
@if (Model is null)
{
            <partial>NO EMPLOYEE WAS FOUND WITH THIS ID</partial>
}
else
{
<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-3">
<h2 class="text-center mb-5">Edit Employee</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row-3">
    <label class="col-sm-4 col-form-label">EmployeeId:</label>
    <div class="col-sm-8">
    <input type="text" class="form-control" asp-for="EmployeeId" readonly/>
    <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
</div>
<div class="row-3">
    <label class="col-sm-4 col-form-label">Name:</label>
    <div class="col-sm-8">
    <input type="text" class="form-control" asp-for="Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="row-3">
    <label class="col-sm-4 col-form-label">Designation:</label>
    <div class="col-sm-8">
    <input type="text" class="form-control" asp-for="Designation"/>
    <span asp-validation-for="Designation" class="text-danger"></span>
    </div>
</div>
<div class="row-3">
    <label class="col-sm-4 col-form-label">Email:</label>
    <div class="col-sm-8">
    <input type="email" class="form-control" asp-for="Email"/>
    <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="row-3">
    <label class="col-sm-4 col-form-label">Phone:</label>
    <div class="col-sm-8">
    <input type="text" class="form-control" asp-for="Phone"/>
    <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
</div>
<div class="row-3">
    <label class="col-sm-4 col-form-label">Address:</label>
    <div class="col-sm-8">
    <input type="textfeild"  class="form-control" asp-for="Address"/>
    <span asp-validation-for="Address" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="offset-sm-4" col-sm-8">
    <button type="submit" class="btn btn-primary">Save</button>
     <a class="btn btn-danger ms-3" asp-action="List" asp-controller="Employee">Back</a>
    </div>

</div>
</form>
</div>
</div>
}