@{
}
@model List<EmployeeDetails.Web.Models.Entities.Employee>
<div class="row mb-5 mt-5">
    <div class="col-8">
        <h3>EMPLOYEES</h3>
    </div>
    <div class="col-4">
        <a class="btn btn-primary float-end" asp-controller="Employee" asp-action="Add">Add Employee</a>
    </div>
</div>
<table class="table">
    <thead>
    <tr>
        <th>EMP ID</th>
        <th>NAME</th>
        <th>DESIGNATION</th>
        <th>EMAIL</th>
        <th>PHONE</th>
        <th>ADRESS</th>
        <th>EDIT</th>
        <th>DELETE</th>
    </tr>
</thead>
<tbody>
        @foreach (var employee in Model)
        {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Name</td>
                    <td>@employee.Designation</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                     <td>@employee.Address</td>
                     <td><a  class="btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a></td>
                    <td>
                        <form asp-controller="Employee" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@employee.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

